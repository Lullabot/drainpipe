{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":renovatePrefix",
    "config:base",
    "group:symfony",
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["drupal-core"]
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "addLabels": ["drupal-core"]
    },
  ],
  "prConcurrentLimit": 3,
  "rangeStrategy": "bump",
  "rebaseWhen": "auto"
}
